# ATT System Dashboard - Environment Configuration
# Copy this file to .env and adjust values for your local development environment

# =============================================================================
# DATA SOURCE CONFIGURATION
# =============================================================================

# Toggle between mock data and real API data
# Set to 'true' to use mock data (useful for development without API server)
# Set to 'false' to use real metrics API (requires api-server.js to be running)
VITE_USE_MOCKS=false

# Base URL for the metrics API server
# Should match the port where api-server.js is running
# Default: http://localhost:4000 (matches our Express server)
VITE_API_BASE_URL=http://localhost:4000

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API request timeout in milliseconds
# How long to wait for API responses before falling back to mock data
# Default: 5000ms (5 seconds)
VITE_API_TIMEOUT=5000

# API retry attempts
# Number of times to retry failed API calls before fallback
# Default: 2 retries
VITE_API_RETRY_ATTEMPTS=2

# Polling interval for real-time updates (milliseconds)
# How often the dashboard refreshes data from the API
# Default: 30000ms (30 seconds)
VITE_POLLING_INTERVAL=30000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug logging in console
# Shows detailed API call logs and error information
# Set to 'true' for development, 'false' for production
VITE_DEBUG_MODE=true

# Toast notification duration (milliseconds)
# How long error and success messages stay visible
# Default: 4000ms (4 seconds)
VITE_TOAST_DURATION=4000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable real-time file watching indicators
# Shows when files are being processed by the API
# Default: true
VITE_SHOW_FILE_WATCH_STATUS=true

# Enable/disable performance metrics in console
# Logs API response times and cache hit rates
# Default: false (enable for performance debugging)
VITE_SHOW_PERFORMANCE_METRICS=false